<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Elogic\Provider\Api\ProviderRepositoryInterface" type="Elogic\Provider\Model\ProviderRepository"/>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="provider_test_listing_data_source" xsi:type="string">ElogicProviderCollection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="ElogicProviderCollection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">elogic_provider</argument>
            <argument name="resourceModel" xsi:type="string">Elogic\Provider\Model\ResourceModel\Provider</argument>
        </arguments>
    </virtualType>
    <type name="Elogic\Provider\Controller\Adminhtml\Text\Uploader">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Elogic\Provider\ReferenceImageUpload</argument>
        </arguments>
    </type>
    <virtualType name="Elogic\Provider\ReferenceImageUpload" type="Elogic\Provider\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">elogic_provider/tmp/feature</argument>
            <argument name="basePath" xsi:type="string">elogic_provider/feature</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
            <argument name="allowedMimeTypes" xsi:type="array">
                <item name="jpg" xsi:type="string">image/jpg</item>
                <item name="jpeg" xsi:type="string">image/jpeg</item>
                <item name="gif" xsi:type="string">image/gif</item>
                <item name="png" xsi:type="string">image/png</item>
            </argument>
        </arguments>
    </virtualType>
</config>
